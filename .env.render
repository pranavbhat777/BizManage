# Render Deployment Configuration for BizManage
# This file tells Render how to build and deploy your app

# Environment variables for production
# Copy this to .env and update with your values

# Node Environment
NODE_ENV=production

# Server Port (Render will provide this)
PORT=5000

# Frontend URL (your Render URL)
FRONTEND_URL=https://bizmanage-api.onrender.com

# Database
DATABASE_PATH=./database.sqlite

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Business Configuration
BUSINESS_NAME=BizManage
BUSINESS_EMAIL=admin@bizmanage.com

# Security
BCRYPT_ROUNDS=12

# CORS - Allow all for now (update after deployment)
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
